<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Budderfly_MAUI_Test.Views.EnergySavingTipEntryPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Enter a new tip">
    <Grid RowDefinitions="auto,auto,*,auto">
        <Grid Grid.Row="0"
              RowDefinitions="*,auto">
            <Label Text="Include a random image?"
                   VerticalOptions="Center" />
            <Switch Margin="10,0"
                    IsToggled="{Binding IncludeRandomImage}"
                    VerticalOptions="Center" />
            <Grid.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ToggleRandomImageClicked}" />
            </Grid.GestureRecognizers>
        </Grid>
        <Entry Grid.Row="1"
               Keyboard="Text"
               Placeholder="Title"
               Text="{Binding Title}" />
        <Editor Grid.Row="2"
                Keyboard="Text"
                Placeholder="Description"
                Text="{Binding Description}" />
        <Button Grid.Row="3"
                Margin="10"
                Command="{Binding ContinueClicked}"
                IsEnabled="{Binding IsValid}"
                Text="Continue"
                VerticalOptions="End" />
    </Grid>
</ContentPage>